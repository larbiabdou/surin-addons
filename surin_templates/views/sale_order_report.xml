<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale.action_report_saleorder" model="ir.actions.report">
        <field name="paperformat_id" ref="surin_templates.paperformat_a4_custom"/>
    </record>
    <record id="sale.action_report_pro_forma_invoice" model="ir.actions.report">
        <field name="paperformat_id" ref="surin_templates.paperformat_a4_custom"/>
    </record>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[4]" position="replace">

        </xpath>
        <xpath expr="//table[1]" position="replace">
            <div style="border-bottom:1px solid black; border-top:1px solid black; margin-bottom:30px;padding-bottom: 20px; padding-top: 10px">
                <table class="table table-sm o_main_table table-borderless">
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_reference" class="text-start">Référence</th>
                        <th name="th_description" class="text-start">Description</th>
                        <th name="th_quantity" class="text-end">Quantity</th>
                        <th name="th_priceunit" class="text-end">Unit Price</th>
                        <th name="th_discount" t-if="display_discount" class="text-end">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_taxes" class="text-end">Taxes</th>
                        <th name="th_subtotal" class="text-end">
                            <span>Amount</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="lines_to_report" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>

                        <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="td_reference"><span t-field="line.product_id.default_code">Bacon Burger</span></td>
                                <td name="td_name"><span t-field="line.product_id.name">Bacon Burger</span></td>
                                <td name="td_quantity" class="text-end">
                                    <span t-field="line.product_uom_qty">3</span>
                                    <span t-field="line.product_uom">units</span>
                                    <span t-if="line.product_packaging_id">
                                        (<span t-field="line.product_packaging_qty" t-options='{"widget": "integer"}'/> <span t-field="line.product_packaging_id"/>)
                                    </span>
                                </td>
                                <td name="td_priceunit" class="text-end">
                                    <span t-field="line.price_unit">3</span>
                                </td>
                                <td t-if="display_discount" class="text-end">
                                    <span t-field="line.discount">-</span>
                                </td>
                                <td name="td_taxes" class="text-end">
                                    <span t-out="', '.join(map(lambda x: (x.description or x.name), line.tax_id))">
                                        Tax 15%
                                    </span>
                                </td>
                                <td t-if="not line.is_downpayment" name="td_subtotal" class="text-end o_price_total">
                                    <span t-field="line.price_subtotal">27.00</span>
                                </td>
                            </t>
                            <t t-elif="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name">A section title</span>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-elif="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name">A note, whose content usually applies to the section or product above.</span>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section') and not line.is_downpayment">
                            <tr class="is-subtotal text-end">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-out="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                    >31.05</span>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
            </div>
        </xpath>

        <xpath expr="//t[@t-set='address']" position="replace">
            <div class="row zero_min_height" style="border-bottom: 1px solid black; margin-bottom: 10px">
                <div class="col-6">
                    <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice # </span>
                    <span t-elif="doc.state in ['draft','sent']">Quotation # </span>
                    <span t-else="">Order # </span>
                    </div>
                    <div class="col-6 text-end">
                        <span t-if="doc.name != '/'" t-field="doc.name"></span>
                    </div>
            </div>
            <div style="padding-bottom: 10px; border-bottom:1px solid black">
                <table class="invoice-table">
                    <tr>
                        <td style="width:48%">
                            <span>Fournisseur:</span>
                        </td>
                        <td style="width:4%"></td>
                        <td style="width:48%">
                     <span>Client:</span>
                        </td>
                    </tr>
                    <tr>
                            <td style="border: 1px solid black !important;padding: 5px; width:48%;height: 100px !important;">
                                <t t-if="doc.company_id.name"><span t-field="doc.company_id.name"/></t>
                            </td>
                            <td></td>
                            <td style="border: 1px solid black !important;padding: 5px; width:48%">
                                <address class="mb-0" t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                                <t t-if="doc.partner_id.rc">RC: <span t-field="doc.partner_id.rc"/></t> <br/>
                                <t t-if="doc.partner_id.ai">AI: <span t-field="doc.partner_id.ai"/></t> <br/>
                                <t t-if="doc.partner_id.nif">NIF: <span t-field="doc.partner_id.nif"/></t> <br/>
                                <t t-if="doc.partner_id.nis">NIS: <span t-field="doc.partner_id.nis"/></t> <br/>
                            </td>
                    </tr>
                </table>

            </div>
            <div style="padding-bottom: 10px; border-bottom:1px solid black">
                <table class="invoice-table" style="margin-top: 10px;">
                    <tr>
                        <td id="invoice_table_td" >
                            <!--<t t-if="doc.company_id.partner_id.bank_ids">
                                <t t-set="bank" t-value="doc.company_id.partner_id.bank_ids[0]"/>
                            <t t-if="bank.acc_number"> Compte bancaire: <span t-field="bank.acc_number"/></t> <br/>
                            <t t-if="bank.bank_id">Banque: <span t-field="bank.bank_id.name"/></t> <br/>
                            <t t-if="bank.bank_id">NIB: <span t-field="bank.bank_id.bic"/></t> <br/>
                            <t t-if="bank.bank_id">SWIFT: <span t-field="bank.bank_id.swift"/></t> <br/>
                            <t t-if="doc.company_id.partner_id.bank_ids[1]" t-set="bank" t-value="doc.company_id.partner_id.bank_ids[1]"/>
                            <t t-if="bank.acc_number"> Compte bancaire: <span t-field="bank.acc_number"/></t> <br/>
                            <t t-if="bank.bank_id">Banque: <span t-field="bank.bank_id.name"/></t> <br/>
                            <t t-if="bank.bank_id">NIB: <span t-field="bank.bank_id.bic"/></t> <br/>
                            <t t-if="bank.bank_id">SWIFT: <span t-field="bank.bank_id.swift"/></t> <br/>
                            </t>-->

                        </td>
                        <td style="border-left: 1px solid black !important;padding: 5px; width:50%">
                            <t t-if="doc.payment_term_id.name">
                                Condition du paiement: <span t-field="doc.payment_term_id.name"/>
                            </t>

                        </td>
                    </tr>
                </table>
            </div>

        </xpath>
        <xpath expr="//h2" position="replace">

        </xpath>
        <xpath expr="//div[hasclass('clearfix')]" position="after">
            <div style="margin-top: -110px; width: 400px;">
                    <p class="lh-sm" t-if="doc.company_id.display_invoice_amount_total_words">
                        Montant total en lettres: <br/>
                        <small class="text-muted lh-sm"><span >Thirty one dollar and Five cents</span></small>
                    </p>
                </div>
        </xpath>
    </template>
        <template id="document_sale_tax_totals_template_inherit" inherit_id="sale.document_tax_totals">
        <xpath expr="//tr[hasclass('o_total')]" position="replace">
            <tr style="border-bottom:1px solid black">
                <td><strong>Total TTC</strong></td>
                <td  class="text-end">
                    <span t-out="tax_totals['formatted_amount_total']">31.05</span>
                </td>
            </tr>
        </xpath>
        <xpath expr="//tr" position="replace">
            <tr>
                <td><strong >Total HT Net</strong></td>

                <td class="text-end">
                    <span
                        t-att-class="oe_subtotal_footer_separator"
                        t-out="subtotal['formatted_amount']"
                    >27.00</span>
                </td>
            </tr>
        </xpath>
        <xpath expr="//tr" position="before">
            <t t-if="doc.discount_amount > 0">
                <tr>
                    <td><strong>Montant HT Brut</strong></td>

                    <td class="text-end">
                        <span t-field="doc.total_without_discount">27.00</span>
                    </td>
                </tr>
                <tr>
                    <td><strong>Remise</strong></td>

                    <td class="text-end">
                        <span t-field="doc.discount_amount">27.00</span>
                    </td>
                </tr>
            </t>

        </xpath>
    </template>
</odoo>