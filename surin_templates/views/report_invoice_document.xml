<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_a4_custom" model="report.paperformat">
        <field name="name">Custom A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">13</field>
        <field name="margin_bottom">18</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">5</field>
        <field name="dpi">90</field>
    </record>
    <record id="account.account_invoices" model="ir.actions.report">
        <field name="paperformat_id" ref="paperformat_a4_custom"/>
    </record>
    <record id="account.account_invoices_without_payment" model="ir.actions.report">
        <field name="paperformat_id" ref="paperformat_a4_custom"/>
        <field name="binding_model_id" eval="False"/>
    </record>
    <template id="document_tax_totals_template_inherit" inherit_id="account.document_tax_totals">
        <xpath expr="//tr[hasclass('o_total')]" position="attributes">
            <attribute name="style">font-family: Pt sans; font-size:10pt</attribute>
        </xpath>
        <xpath expr="//tr[hasclass('o_total')]" position="replace">
            <tr t-if="o.tax_stamp_amount > 0" style="font-family: Pt sans;font-size:10pt">
                <td><strong>Total TTC</strong></td>
                <td  class="text-end">
                    <span t-out="tax_totals['total_ttc_without_stamp']">31.05</span>
                </td>
            </tr>
            <tr t-if="o.tax_stamp_amount > 0" style="font-family: Pt sans;font-size:10pt">
                <td><strong>Timbre Fiscal</strong></td>
                <td  class="text-end">
                    <span t-out="tax_totals['formatted_amount_stamp']">31.05</span>
                </td>
            </tr>
            <tr style="border-bottom:1px solid black; font-family: Pt sans;font-size:10pt">
                <td><strong>Total TTC Net</strong></td>
                <td  class="text-end">
                    <span t-out="tax_totals['formatted_amount_total']">31.05</span>
                </td>
            </tr>
        </xpath>
        <xpath expr="//tr" position="attributes">
            <attribute name="style">font-family: Pt sans;font-size:10pt</attribute>
        </xpath>
        <xpath expr="//tr" position="replace">
            <tr style="font-family: Pt sans;font-size:10pt">
                <td><strong >Total HT Net</strong></td>

                <td class="text-end">
                    <span
                        t-att-class="oe_subtotal_footer_separator"
                        t-out="subtotal['formatted_amount']"
                    >27.00</span>
                </td>
            </tr>
        </xpath>
        <xpath expr="//tr" position="before">
            <t t-if="o.discount_amount > 0">
                <tr style="font-family: Pt sans;font-size:10pt">
                    <td><strong>Montant HT Brut</strong></td>

                    <td class="text-end">
                        <span t-field="o.total_without_discount">27.00</span>
                    </td>
                </tr>
                <tr style="font-family: Pt sans;font-size:10pt">
                    <td><strong>Remise</strong></td>

                    <td class="text-end">
                        <span t-field="o.discount_amount">27.00</span>
                    </td>
                </tr>
            </t>

        </xpath>
    </template>
    <template id="tax_groups_totals" inherit_id="account.tax_groups_totals">
        <xpath expr="//t/tr/t/td" position="replace">
            <td style="font-family: Pt sans;font-size:10pt"><strong>TVA</strong></td>
        </xpath>
        <xpath expr="//t/tr/t[2]/td" position="replace">
            <td style="font-family: Pt sans;font-size:10pt"><strong>TVA</strong></td>
        </xpath>
    </template>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-if='print_with_payments']" position="replace">

        </xpath>
        <xpath expr="//div[hasclass('oe_structure')]" position="replace">

        </xpath>
        <xpath expr="//div[hasclass('row')]" position="replace">
            <div class="row zero_min_height" style="border-bottom: 1px solid black; margin-bottom: 30px; font-family: Pt sans; margin-top: 10px; font-size:14pt">
                <div class="col-6">
                    <span t-if="not proforma"></span>
                    <span t-else="">PROFORMA</span>
                    <t t-if="o.is_fictitious == False">
                        <span>Vente</span>
                    </t>
                    <t t-else="">
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                    <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'">Credit Note</span>
                    <span t-elif="o.move_type == 'out_refund' and o.state == 'draft'">Draft Credit Note</span>
                    <span t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">Cancelled Credit Note</span>
                    <span t-elif="o.move_type == 'in_refund'">Vendor Credit Note</span>
                    <span t-elif="o.move_type == 'in_invoice'">Vendor Bill</span>
                    </t>
                </div>
                <div class="col-6 text-end">
                    <span t-if="o.name != '/'" t-field="o.name">INV/2023/0001</span>
                </div>
            </div>
            <div style="padding-bottom: 5px; border-bottom:1px solid black; font-family: Pt sans;">
                <table class="invoice-table">
                    <tr>
                        <td style="width:48%; font-size:8pt">
                            <span t-if="o.move_type == 'out_invoice'">Vendeur:</span>
                    <span t-elif="o.move_type == 'in_invoice'">Acheteur:</span>
                        </td>
                        <td style="width:4%"></td>
                        <td style="width:48%; font-size:8pt">
                            <span t-if="o.move_type == 'in_invoice'">Vendeur:</span>
                    <span t-elif="o.move_type == 'out_invoice'">Acheteur:</span>
                        </td>
                    </tr>
                    <tr>
                            <td style="width:48%;height: 100px !important;font-size:10pt !important">
                                <div class="square-table">
                                  <div class="corner top-left"></div>
                                  <div class="corner top-right"></div>
                                  <div class="corner bottom-left"></div>
                                  <div class="corner bottom-right"></div>
                                  <div class="content">
                                      <t t-if="o.is_fictitious == False">
                                        <t t-if="o.company_id.name"><span style="font-size:12pt" t-field="o.company_id.name"/></t>
                                    </t>
                                    <t t-if="o.is_fictitious == True and o.sale_type == 'type_1'">
                                        <t t-if="o.company_id.company_name_type_1"><span style="font-size:12pt" t-field="o.company_id.company_name_type_1"/></t> <br/>
                                        <t t-if="o.company_id.street_1"><span t-field="o.company_id.street_1"/></t> <br/>
                                        <t t-if="o.company_id.city_1"><span t-field="o.company_id.city_1">, </span></t>
                                        <t t-if="o.company_id.state_id_1.name"><span t-field="o.company_id.state_id_1.name">, </span></t>
                                        <t t-if="o.company_id.zip_1"><span t-field="o.company_id.zip_1"></span></t>
                                        <t t-if="o.company_id.country_id_1.name"><span t-field="o.company_id.country_id_1.name"/></t> <br/>
                                        <t t-if="o.company_id.partner_id.industry_id" style="font-size:8pt !important">Secteur d'activité: <span t-field="o.company_id.partner_id.industry_id.name"/></t> <br/>
                                        <t t-if="o.company_id.rc_1"><span style="font-weight: 800;" >RC: <span style="font-weight: 900;" t-field="o.company_id.rc_1"/></span></t>
                                        <t t-if="o.company_id.nif_1"><span style="font-weight: 800;" >NIF: <span style="font-weight: 900;" t-field="o.company_id.nif_1"/></span></t> <br/>
                                        <t t-if="o.company_id.nis_1"><span style="font-weight: 800;" >NIS: <span style="font-weight: 900;" t-field="o.company_id.nis_1"/></span></t>
                                        <t t-if="o.company_id.ai_1"><span style="font-weight: 800;" >AI: <span style="font-weight: 900;" t-field="o.company_id.ai_1"/></span></t> <br/>
                                    </t>
                                    <t t-if="o.is_fictitious == True and o.sale_type == 'type_2'">
                                        <t t-if="o.company_id.company_name_type_2"><span style="font-size:12pt" t-field="o.company_id.company_name_type_2"/></t> <br/>
                                        <t t-if="o.company_id.street_2"><span t-field="o.company_id.street_2"/></t> <br/>
                                        <t t-if="o.company_id.city_2"><span t-field="o.company_id.city_2">, </span></t>
                                        <t t-if="o.company_id.state_id_2.name"><span t-field="o.company_id.state_id_2.name">, </span></t>
                                        <t t-if="o.company_id.zip_2"><span t-field="o.company_id.zip_2"></span></t>
                                        <t t-if="o.company_id.country_id_2.name"><span t-field="o.company_id.country_id_2.name"/></t><br/>
                                        <t t-if="o.company_id.partner_id.industry_id" style="font-size:8pt !important">Secteur d'activité: <span t-field="o.company_id.partner_id.industry_id.name"/></t> <br/><br/>
                                        <t t-if="o.company_id.rc_2"><span style="font-weight: 800;" >RC: <span style="font-weight: 900;" t-field="o.company_id.rc_2"/></span></t>
                                        <t t-if="o.company_id.nif_2"><span style="font-weight: 800;" >NIF: <span style="font-weight: 900;" t-field="o.company_id.nif_2"/></span></t> <br/>
                                        <t t-if="o.company_id.nis_2"><span style="font-weight: 800;" >NIS: <span style="font-weight: 900;" t-field="o.company_id.nis_2"/></span></t>
                                        <t t-if="o.company_id.ai_2"><span style="font-weight: 800;" >AI: <span style="font-weight: 900;" t-field="o.company_id.ai_2"/></span></t> <br/>
                                    </t>
                                      </div>
                                    </div>
                                <!---->
                            </td>
                            <td></td>
                            <td style="width:48%;height: 100px !important; font-size:10pt !important">
                                <div class="square-table">
                                  <div class="corner top-left"></div>
                                  <div class="corner top-right"></div>
                                  <div class="corner bottom-left"></div>
                                  <div class="corner bottom-right"></div>
                                  <div class="content">
                                      <t t-if="o.partner_id.name"><span style="font-size:12pt" t-field="o.partner_id.legal_status"/> <span style="font-size:12pt !important" t-field="o.partner_id.name"/></t> <br/>
                                      <div style="font-size:10pt">
                                          <t t-if="o.partner_id.street"><span t-field="o.partner_id.street"/></t> <br/>
                                        <t t-if="o.partner_id.city"><span t-field="o.partner_id.city">, </span></t>
                                        <t t-if="o.partner_id.state_id.name"><span t-field="o.partner_id.state_id.name">, </span></t>
                                        <t t-if="o.partner_id.zip"><span t-field="o.partner_id.zip"></span></t>
                                        <t t-if="o.partner_id.country_id.name"><span t-field="o.partner_id.country_id.name"/></t><br/>
                                        <t t-if="o.partner_id.industry_id" style="font-size:8pt !important">Secteur d'activité: <span t-field="o.partner_id.industry_id.name"/></t> <br/>
                                        <t t-if="o.partner_id.rc"> <span style="font-weight: 800;" >RC: <span style="font-weight: 900;" t-field="o.partner_id.rc"/></span></t>
                                          <t t-if="o.partner_id.nif"><span style="font-weight: 800;" >NIF: <span style="font-weight: 900;" t-field="o.partner_id.nif"/></span></t> <br/>
                                          <t t-if="o.partner_id.nis"><span style="font-weight: 800;" >NIS: <span style="font-weight: 900;" t-field="o.partner_id.nis"/></span></t>
                                          <t t-if="o.partner_id.ai"><span style="font-weight: 800;" >AI: <span style="font-weight: 900;" t-field="o.partner_id.ai"/></span></t> <br/>
                                      </div>
                                  </div>
                                </div>
                            </td>
                    </tr>
                </table>

            </div>
            <div style="padding-bottom: 8px; border-bottom:1px solid black; font-family: Pt sans;">
                <table class="invoice-table" style="margin-top: 8px;">
                    <tr>
                        <td id="invoice_table_td" style="font-size:10pt !important">
                            <t t-if="o.company_id.partner_id.bank_ids and o.is_fictitious == True">
                                <t t-set="bank" t-value="o.company_id.partner_id.bank_ids[0]"/>
                                <span style="font-size:11pt !important">
                                    Compte bancaire: <br/>
                                </span>

                                <t t-if="bank.bank_id">Banque: <span t-field="bank.bank_id.name"/></t> <br/>
                                <t t-if="bank.bank_id">NIB: <span t-field="bank.acc_number"/></t> <br/>
                                <t t-if="len(o.company_id.partner_id.bank_ids) > 1">
                                    <t t-set="bank" t-value="o.company_id.partner_id.bank_ids[1]"/>
                                    <span style="font-size:11pt !important">
                                        Compte bancaire: <br/>
                                    </span>
                                    <t t-if="bank.bank_id">Banque: <span t-field="bank.bank_id.name"/></t> <br/>
                                    <t t-if="bank.bank_id">NIB: <span t-field="bank.acc_number"/></t> <br/>
                                </t>
                            </t>

                        </td>
                        <td style="border-left: 1px solid black !important;padding: 5px; width:50%; font-size:10pt !important">
                            <t t-if="o.is_fictitious == True">
                                <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                <t t-foreach="payments_vals" t-as="payment_vals">
                                    <t t-set="payment" t-value="o.sudo().env['account.payment'].search([('id', '=', payment_vals['account_payment_id'])])"/>

                                    Référence: <span t-esc="payment.name"/> <br/>
                                    <t t-if="o.payment_mode">Mode de paiement: <span t-field="o.payment_mode"/> <![CDATA[&nbsp;]]> Du <span t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></t>
                                    <t t-else="">Date du paiement<span t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></t>
                                    <br/>
                                    Montant: <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/> <br/>
                                </t>
                            </t>
                            <t t-else="">
                                <strong>Due Date: </strong><span t-field="o.invoice_date_due">2023-10-31</span> <br/>
                                <strong>Delivery Date: </strong><span t-field="o.delivery_date">2023-09-25</span><br/>
                                <strong>Source: </strong><span t-field="o.invoice_origin"></span>
                            </t>
                        </td>
                    </tr>
                </table>
            </div>

        </xpath>
        <xpath expr="//h2" position="replace">

        </xpath>
        <xpath expr="//div[@id='informations']" position="replace">
            <div class="text-end" t-if="o.invoice_date" name="invoice_date" style="margin-top:-35px;margin-bottom:10px; margin-left:70px; font-family: Pt sans; font-size:10pt">
                <t t-if="o.move_type == 'out_invoice'"><strong>Invoice Date:</strong></t>
                <t t-elif="o.move_type == 'out_refund'"><strong>Credit Note Date:</strong></t>
                <t t-elif="o.move_type == 'out_receipt'"><strong>Receipt Date:</strong></t>
                <t t-else=""><strong>Date:</strong></t>
                <span t-field="o.invoice_date">2023-09-12</span>
            </div>
        </xpath>
        <xpath expr="//div[@id='payment_term']" position="replace">
            <br/><br/>
                <div style="font-family: Pt sans; font-size:10pt">
                    <p class="lh-sm" t-if="o.company_id.display_invoice_amount_total_words">
                        Montant total en lettres: <br/>
                        <small class="text-muted lh-sm"><span t-field="o.amount_total_words">Thirty one dollar and Five cents</span></small>
                    </p>
                </div>
        </xpath>
        <xpath expr="//div[@id='right-elements']/div[1]" position="attributes">
            <attribute name="style">font-family: Pt sans;</attribute>
        </xpath>
        <xpath expr="//div[@id='right-elements']/div[2]" position="replace">

        </xpath>
        <xpath expr="//table[@name='invoice_line_table']" position="replace">
            <div style="border-bottom:1px solid black; border-top:1px solid black; margin-bottom:30px;padding-bottom: 20px; padding-top: 10px; font-family: Pt sans; font-size:10pt">
                <table class="table table-sm o_main_table table-borderless" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <th name="th_description" class="text-start"><span>Référence</span></th>
                                    <th name="th_description" class="text-start"><span>Description</span></th>
                                    <th name="th_quantity" class="text-end"><span>Quantité</span></th>
                                    <th name="th_priceunit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>PU</span></th>
                                    <th name="th_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Disc.%</span>
                                    </th>
                                    <th name="th_taxes" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>TVA</span></th>
                                    <t>
                                        <th name="th_subtotal_tva" class="text-end">
                                        <span>Montant HT</span>
                                    </th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="current_total" t-value="0"/>
                                <t t-set="product_stamp" t-value="o.env.ref('l10n_dz_stamp.product_product_service_stamp')"/>
                                <t t-set="lines" t-value="o.invoice_line_ids.filtered(lambda p: p.product_id.id != product_stamp.id and p.price_unit > 0).sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                    <t t-set="current_total" t-value="current_total + line.price_total"/>

                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                            <td name="account_invoice_line_ref"><span t-if="line.product_id.default_code" t-field="line.product_id.default_code" t-options="{'widget': 'text'}"/></td>

                                            <td name="account_invoice_line_name"><span t-if="line.product_id.name" t-field="line.product_id.name" t-options="{'widget': 'text'}">Bacon Burger</span></td>
                                            <td name="td_quantity" class="text-end">
                                                <span t-field="line.quantity">3.00</span>
                                                <span t-field="line.product_uom_id"  groups="uom.group_uom">units</span>
                                            </td>
                                            <td name="td_price_unit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit">9.00</span>
                                            </td>
                                            <td name="td_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.discount">0</span>
                                            </td>
                                            <td name="td_taxes" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-out="', '.join(map(lambda x: (x.invoice_label or x.name), line.tax_ids))" id="line_tax_ids">Tax 15%</span>
                                            </td>
                                            <t t-if="display_discount_fixed or display_discount">
                                                <td name="td_total" class="text-end o_price_total">
                                                    <span class="text-nowrap" t-field="line.total_without_discount">27.00</span>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td name="td_subtotal" class="text-end o_price_total">
                                                    <span class="text-nowrap" t-field="line.price_subtotal">27.00</span>
                                                </td>
                                            </t>
                                        </t>
                                        <t t-elif="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}">A section title</span>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-elif="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}">A note, whose content usually applies to the section or product above.</span>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-end">
                                            <td colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-out="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                >31.05</span>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
            </div>
        </xpath>
    </template>


</odoo>