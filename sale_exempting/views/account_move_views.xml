<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="account_invoice_inherit" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="remaining_qty_not_declared" invisible="1"/>
                <button name="create_invoice_duplicated" type="object" string="CrÃ©er facture contrepartie"
                        invisible="not is_real or state != 'posted' or remaining_qty_not_declared == 0"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_get_fictitious_invoices" type="object"
                            class="oe_stat_button" icon="fa-file" invisible="count_fictitious_invoices == 0">
                            <div class="o_stat_info">
                                <field name="count_fictitious_invoices" class="o_stat_value"/>
                                <span class="o_stat_text"> Invoices</span>
                            </div>
                        </button>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="is_real"/>
            </xpath>
        </field>
    </record>
</odoo>